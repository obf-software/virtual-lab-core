{
    "name": "virtual-lab-core",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "engines": {
        "node": "18"
    },
    "scripts": {
        "postinstall": "if [ \"$CI\" != \"true\" ]; then npm run install:client && npm run install:docs; fi",
        "install:client": "cd packages/client && npm install",
        "install:docs": "cd packages/docs && npm install",
        "dev": "AWS_PROFILE=virtual-lab sst dev",
        "build": "sst build",
        "deploy": "sst deploy",
        "remove": "AWS_PROFILE=virtual-lab sst remove",
        "typecheck": "tsc --noEmit && npm run typecheck --ws --if-present",
        "lint": "NODE_OPTIONS=--max-old-space-size=4096 eslint . --report-unused-disable-directives",
        "test": "jest",
        "format": "prettier --write .",
        "dev:check": "npm run typecheck && npm run lint && npm run test && npm run format"
    },
    "dependencies": {
        "aws-cdk-lib": "2.142.1",
        "constructs": "10.3.0",
        "lodash": "^4.17.21",
        "openapi3-ts": "^4.3.1",
        "sst": "2.42.0"
    },
    "devDependencies": {
        "@tsconfig/node18": "^18.2.4",
        "@types/aws-lambda": "^8.10.138",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.12",
        "@types/lodash": "^4.17.4",
        "@types/node": "^18.19.33",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "eslint": "^8.56.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "jest": "^29.7.0",
        "mongodb": "^6.6.2",
        "mongodb-memory-server": "^9.2.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.2.2",
        "zod": "^3.23.8"
    },
    "workspaces": [
        "packages/*[!client, !docs]*"
    ]
}
